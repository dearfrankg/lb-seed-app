extends ../layouts/layout

block content
  style(type='text/css').
    body {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .header {
      padding-right: 15px;
      padding-left: 15px;
    }

    .header {
      padding-bottom: 20px;
      border-bottom: 1px solid #e5e5e5;
    }

    .header h3 {
      margin-top: 0;
      margin-bottom: 0;
      line-height: 40px;
    }



  div(style='margin: 0 auto;')
    h1(style='text-align: center') GILT
    .header.clearfix

    div(style='margin: 0 auto; text-align: center; width: 400px;')

      .caption(style='margin: 0 auto; text-align: center; width: 400px;')
        p &nbsp;
        p
          em Sign up for a free, exclusive membership.

        .caption(style='margin: 20px auto; text-align: center; width: 250px;')

          p

          form(role='form', action='/signup', method='post')

            .form-group
              input#username.form-control(type='text', name='username', placeholder='Enter your name')
            .form-group
              input#email.form-control(type='text', name='email', placeholder='Enter your email address')
            .form-group
              input#password.form-control(type='password', name='password', placeholder='Password')

            p
              input#password.btn.btn-warning.btn-block(type='submit', name='submit')


            p &nbsp;


            if (messages.error)
              p
                span(style="color:red")= messages.error
