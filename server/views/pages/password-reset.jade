extends ../layouts/layout

block content

  style(type='text/css').
    body {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .header {
      padding-right: 15px;
      padding-left: 15px;
    }

    .header {
      padding-bottom: 20px;
      border-bottom: 1px solid #e5e5e5;
    }

    .header h3 {
      margin-top: 0;
      margin-bottom: 0;
      line-height: 40px;
    }



  div(style='margin: 0 auto;')
    h1(style='text-align: center') GILT
    .header.clearfix

    div(style='margin: 0 auto; text-align: center; width: 300px;')

      .caption(style='margin: 0 auto; text-align: center; width: 250px;')

        p &nbsp;
        h4
          em Password Reset Form
        p
        form(role='form', action='/reset-password?access_token=#{accessToken}', method='post')

          .form-group
            input#password.form-control(type='password', name='password', placeholder='New password')

          .form-group
            input#confirmation.form-control(type='password', name='confirmation', placeholder='Confirm new username')

          p
            input#password.btn.btn-warning.btn-block(type='submit', name='submit')


    if (messages.error)
      div.alert.alert-danger
        p
          span(style="color:red")= messages.error
