nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container(style='max-height: 20px;')
    #navbar.navbar-collapse.collapse
      if user
        //- User *is* logged In
        ul.nav.navbar-nav.navbar-right
          li
            div(style='position: absolute; top: 15px; left: -80px;')
              dropdown
                button#dropdownMenu1.btn.btn-xs.btn-default.btn-inverse.dropdown-toggle(type='button', data-toggle='dropdown')
                  em Account&nbsp;
                  span.caret
                ul.dropdown-menu(aria-labelledby='dropdownMenu1')
                  li
                    a(href='#') Orders
                  li
                    a(href='#') Account Settings
                  li
                    a(href='#') Help
                  li.divider(role='separator')
                  li
                    a(href='/signout') Sign Out
          li
            a(href='/')
              i.fa.fa-bell
          li
            a(href='/')
              i.fa.fa-opencart
              em &nbsp;Cart
          li
            a(href='/')
              button.btn.btn-warning.btn-xs Checkout

      else
        //- User is *not* Logged In
        ul.nav.navbar-nav.navbar-right
          li(class=url=='/signin'?'active':undefined)
            a(href='/signin') Sign In
          li(class=url=='/signup'?'active':undefined)
            a(href='/signup') Register
          li(class=url=='/'?'active':undefined)
            a(href='/') Cart

